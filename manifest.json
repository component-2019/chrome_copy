{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "文章复制工具",
  // 插件的版本
  "version": "1.0.0",
  // 插件描述
  "description": "文章内容提取",
  // 图标，一般偷懒全部用一个尺寸的也没问题
  "icons": {
    "16": "./img/icon.png",
    "48": "./img/icon.png",
    "128": "./img/icon.png"
  },
  "browser_action": {
    "default_icon": "./img/icon.png",
    // 图标悬停时的标题，可选
    "default_title": "文章内容提取",
    "default_popup": "./html/index.html"
  },
  "web_accessible_resources": [
    "js/export/csdn.js"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://blog.csdn.net/*"
        //CSDN
      ],
      "js": [
        "./js/baseJs/jquery-2.2.1.js",
        "./js/contentJs/csdn.js",
        "./js/contentJs/content.js"
      ],
      "css": [
        "./css/bootstrap.min.css"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "storage"
  ]
}
